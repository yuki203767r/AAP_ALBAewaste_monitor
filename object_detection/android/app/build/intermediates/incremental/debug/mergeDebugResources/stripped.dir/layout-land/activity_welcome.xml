<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/green">

    <ImageView
        android:id="@+id/albaLogo"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/alba_logo">

    </ImageView>
    <View
        android:layout_width="1dp"
        android:layout_height="360dp"
        android:background="@color/black"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/albaLogo"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:layout_toRightOf="@id/albaLogo"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="40dp">

    </TextView>


    <Button
        android:id="@+id/beginEwaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-36dp"
        android:layout_marginRight="252dp"
        android:backgroundTint="@color/icActive"
        android:fontFamily="@font/poppins_medium"
        android:onClick="beginEwaste"
        android:padding="30dp"
        android:text="@string/beginButton"
        android:textColor="@color/black"
        android:textSize="30dp" />

</RelativeLayout>