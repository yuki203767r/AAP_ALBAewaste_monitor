<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:background="@color/green">

    <ImageView
        android:id="@+id/albaLogo"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alba_logo">

    </ImageView>
    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/albaLogo"
        android:id="@+id/dividerLine"/>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerLine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/welcome"
        android:textColor="@color/black"
        android:textSize="30dp">

    </TextView>


    <Button
        android:id="@+id/beginEwaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/icActive"
        android:fontFamily="@font/poppins_medium"
        android:onClick="beginEwaste"
        android:padding="30dp"
        android:text="@string/beginButton"
        android:textColor="@color/black"
        android:textSize="30dp" />

</RelativeLayout>