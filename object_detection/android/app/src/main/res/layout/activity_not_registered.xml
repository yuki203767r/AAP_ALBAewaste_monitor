<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/xbtn"
        android:src="@drawable/cross"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:onClick="goNextPage"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hellothere"
        android:text="Hi there."
        android:fontFamily="@font/poppins_medium"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/notregistered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/Hellothere"
        android:fontFamily="@font/poppins_medium"
        android:text="You do not have an account with us."
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register"
        android:text="Want to Register?"
        android:fontFamily="@font/poppins_medium"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_below="@id/notregistered"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/androidqr"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_toLeftOf="@id/scanandroid"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="For Android users:"
        android:textColor="@color/black"
        android:layout_marginRight="10dp"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/scanandroid"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/scanios"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/qr_android"></ImageView>

    <TextView
        android:id="@+id/iosqr"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_medium"
        android:text="For IOS users:"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/scanios"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/iosqr"
        android:layout_alignParentRight="true"
        android:src="@drawable/qr_ios"></ImageView>


</RelativeLayout>